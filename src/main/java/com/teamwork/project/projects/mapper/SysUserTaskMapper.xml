<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teamwork.project.projects.mapper.SysUserTaskMapper">

    <resultMap type="com.teamwork.project.projects.domain.SysUserTask" id="SysUserTaskMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="taskId" column="task_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserTaskMap">
        select
          id, user_id, task_id
        from sys_user_task
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysUserTaskMap">
        select
          id, user_id, task_id
        from sys_user_task
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserTaskMap">
        select
          id, user_id, task_id
        from sys_user_task
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="taskId != null">
                and task_id = #{taskId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_user_task(user_id, task_id)
        values (#{userId}, #{taskId})
    </insert>

    <insert id="insertList" keyColumn="id" keyProperty="id" parameterType="java.util.List" useGeneratedKeys="true">
        insert into sys_user_task(user_id, task_id)
        values
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.userId}, #{item.taskId})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_user_task
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sys_user_task where id = #{id}
    </delete>

</mapper>